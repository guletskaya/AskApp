<h2 class="text-center mt-4"><%= @picture.title %></h2>
    <div class="container mb-4">
            <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card shadow p-1 mb-5 bg-white rounded">
                <div class="card-header text-center font-italic">
                    by <%= @picture.user.username if @picture.user %>
                </div>
                <div class="card-body ">
                    <div class="row justify-content-md-center mb-4">
                    <%= image_tag @picture.image, width:"300px" if @picture.image.attached?%>
                    </div>
                    <div class="row justify-content-md-center mb-4">
                        <div class="card-text"><%= simple_format(@picture.description) %></div>
                    </div>
                    <div class="text-center">
                        <%= link_to "Edit", edit_picture_path(@picture), class: "btn btn-outline-info" %>
                        <%= link_to "Delete", picture_path(@picture), data: { method: :delete, confirm: "Are you sure?"}, class: "btn btn-outline-danger"%>
                    </div>
                    </div>
                <div class="card-footer text-center text-muted">
                   <small>Created <%= time_ago_in_words(@picture.created_at) %> ago,
                   updated <%= time_ago_in_words(@picture.updated_at) %> ago</small>
                </div>
                </div>
                <%= link_to '[Return to pictures listing]', pictures_path, class: "mx-auto justify-content-center d-grid gap-2 mb-5 d-md-flex mt-4 col-4 text-info" %>
     </div>
</div>
</div>