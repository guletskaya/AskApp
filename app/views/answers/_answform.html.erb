<%= render 'shared/errors', object: @answer %>
<%= form_with model: [@question, @answer] do |f| %>
    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
            <h2> <span class="badge badge-pill badge-success">Answer:</span></h2>
        </div>
        <div class="col-sm-10">
            <%= f.text_area :body, class: 'form-control' %>
        </div>
    </div>
    <div class="col-auto">
        <%=f.submit class: "btn btn-outline-success mx-auto btn-lg d-grid gap-2 d-md-flex mt-4 col-4 justify-content-md-center" %>
    </div>
<% end %>