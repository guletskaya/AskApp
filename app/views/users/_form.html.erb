<div class="container bg-green">
   
<%= render 'shared/errors', object: @user %>
 <div class="mb-4">
    <div class="row justify-content-md-center bg-success shadow rounded">
        <div class="p-3 border bg-light col-8 mt-4 mb-4 shadow rounded">
            <%= form_with(model: @user, data: { turbo: false }, local: true) do |f| %>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Username</label>
                    <%= f.text_field :username, class:"form-control mb-20 mt-20 mx-auto shadow", placeholder: "Enter a username" %>
                </div>
               <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Email</label>
                    <%= f.email_field :email, class: "form-control mb-2 mx-auto shadow rounded", placeholder: "Enter an email" %>
               </div>
               <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Password</label>
                    <%= f.password_field :password, class: "form-control mb-2 mx-auto shadow rounded", placeholder: "Choose a password" %>
               </div>
               <div class="col-auto">
                 <%=f.submit "Sign Up", class: "btn btn-outline-success mx-auto btn-lg d-grid gap-2 d-md-flex mt-4 col-4 justify-content-md-center" %>
               </div>
            <% end %> 
            <%= link_to '[Cancel and return to homepage]', root_path, class: "mx-auto justify-content-center d-grid gap-2 d-md-flex mt-4 text-info" %>
        </div>
    </div>
  </div>
</div>