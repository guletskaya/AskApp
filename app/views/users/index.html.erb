<h1 class="text-center mt-4">AskAll users</h1>
<div class="container">
    <% @users.each do |user| %>
        <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow p-1 mb-5 bg-white rounded">
            <div class="card-header font-italic">
                <%= link_to user.username, user %>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    <%= link_to gravatar_for(user, size: 150), user %>
                </h5>
                <p class="card-text"><%= pluralize(user.questions.count, "question") %></p>
                <%= link_to "View profile", user, class: "btn btn-outline-success" %>
                <%= link_to "Edit your profile", edit_user_registration_path(user), class: "btn btn-outline-info"  if user==current_user  %>
                <%= link_to "Edit this profile", edit_user_registration_path(user), class: "btn btn-outline-info" if current_user.admin? && user != current_user %>
            </div>
            <div class="card-footer text-muted">
                <small>Joined <%= time_ago_in_words(user.created_at) %> ago </small>
            </div>
            </div>
    </div>
    </div>
    <% end %>
</div>