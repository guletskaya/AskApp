<h1 class="text-center mt-4">Change your password</h1>

<div class="container bg-green">
 <div class="mb-4">
    <div class="row justify-content-md-center bg-success shadow rounded">
        <div class="p-3 border bg-light col-8 mt-4 mb-4 shadow rounded">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
               <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">New password</label>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                    <% end %>
                    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control mb-2 mx-auto shadow rounded", placeholder: "Choose your new password" %>
               </div>
               <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Confirm your password</label>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-2 mx-auto shadow rounded", placeholder: "Confirm your password" %>
               </div>
               <div class="col-auto">
                 <%=f.submit "Change my password", class: "btn btn-outline-success mx-auto  d-md-flex mt-4 justify-content-md-center" %>
               </div>
            <% end %> 
            <%= link_to '[Cancel and return to homepage]', root_path, class: " justify-content-center d-grid gap-2 d-md-flex mt-4 text-info" %>
          </div>
    </div>
  </div>
</div>


